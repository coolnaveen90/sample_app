source 'https://rubygems.org'

gem 'rails', '4.0.1'

group :development, :test do
   gem 'sqlite3', '1.3.5'
   gem 'rspec-rails', '2.10.0'
end

group :assets do
   gem 'sass-rails', '4.0.0'
   gem 'coffee-rails', '4.0.0'
   gem 'uglifier', '1.3.0'
end

gem 'jquery-rails'
gem 'turbolinks'

gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :test do
   gem 'capybara', '1.1.2'
end

group :production do 
   gem 'pg', '0.12.2'
end
